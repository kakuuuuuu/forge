<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.6/js/materialize.min.js"></script>
    <link rel='stylesheet' type='text/css' href='stylesheets/style.css' />
</head>
<body>
<div id='login' class="row">
<div id='logheader' class='col s4 offset-s4 center-align'>
    <h1 class='uranium'>Login</h1>
    <% if (message.length > 0) { %>
        <div class="center-align redfont"><%= message %></div>
    <% } %>
    <form action="/login" method="post">
        <div class="input-field">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="input-field">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>

        <button type="submit" class="btn waves-light waves-effect blue-grey darken-1">Login</button>
    </form>
    <div style='margin-top: 10px;' class='line'></div>
    <div class='row' style='padding-top: 10px;'>
      <p>Need an account? <a href="/signup">Signup</a></p>
      <p>Or go <a href="/">home</a>.</p>
    </div>

</div>

</div>
</body>
</html>
